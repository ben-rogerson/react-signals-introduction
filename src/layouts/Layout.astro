---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    min-width: 0px;
  }
  html {
    font-family: Arial, Helvetica, sans-serif;
    color: #fff;
    text-align: center;
    background: #13151a;
  }
  button {
    background: #f0f0f0;
    border: none;
    padding: .5rem 1rem;
    border-radius: 5px;
    cursor: pointer;
    display: block;
    font-size: inherit;
    text-align: inherit;
  }
</style>
